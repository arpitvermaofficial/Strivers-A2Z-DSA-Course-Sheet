//Initial template for C++

#include <bits/stdc++.h>
using namespace std;

// } Driver Code Ends
//User function template for C++

class Solution{
  public:
    int longestKSubstr(string s, int k) {
    // your code here
      int ans=-1,i=0,j=0,len=0;
     map<char,int>m;
     while(j<s.length()){
         m[s[j]]++;
         if(m.size()==k){
             len=j-i+1;
             ans++;
         }
         else if(m.size()>k){
             while(i<j&&m.size()>k){
                 m[s[i]]--;
                 if(m[s[i]]==0){
                 m.erase(s[i]);
                 
                 }
               i++;
               ans++
                 }
             } 
         j++;
     }
        return ans;
    }
};

//{ Driver Code Starts.
int main() {
    int t;
    cin >> t;
    while (t--) {
        string s;
        cin >> s;
        int k;
        cin >> k;
        Solution ob;
        cout << ob.longestKSubstr(s, k) << endl;
    }
}

// } Driver Code Ends
