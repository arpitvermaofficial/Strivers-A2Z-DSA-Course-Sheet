//{ Driver Code Starts
#include <bits/stdc++.h>
using namespace std;


// } Driver Code Ends
class Solution {
  public:
    int leastInterval(int N, int k, vector<char> &tasks) {
        // code here
        vector<int>v(26,0);
        for(int i=0;i<tasks.size();i++){
            v[tasks[i]-'A']++;
        }
        sort(v.begin(),v.end());
        int chunk=v[25]-1;
        int idle=chunk*k;
        for(int i=24;i>=0;i--){
            idle-=min(chunk,v[i]);
        }
        if(idle<0)
        return N;
        else
        return N+idle;
    }
};

//{ Driver Code Starts.

int main() {
    int t;
    cin >> t;
    while (t--) {
        int N, K;
        cin >> N >> K;

        vector<char> tasks(N);
        for (int i = 0; i < N; i++) cin >> tasks[i];

        Solution obj;
        cout << obj.leastInterval(N, K, tasks) << endl;
    }
    return 0;
}
// } Driver Code Ends
