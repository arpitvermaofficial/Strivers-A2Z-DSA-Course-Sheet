#include <bits/stdc++.h>
using namespace std;

// } Driver Code Ends
//User function Template for C++

class Solution {
  public:
  bool rec(int a[],int i,int n){
      if(i==n-1)
      return true;
      for(int j=i+1;j<=i+a[i];j++ ){
      if(rec(a,j,n))
      return true;}
      return false;
  }
    int canReach(int a[], int n) {
       return rec(a,0,n);
    }
};

///optimal approach
int canReach(int a[], int n) {
        // code here
         int max1=a[0];
      for(int i=0;i<n;i++){
          if(i<=max1){
              max1=max(max1,i+a[i]);
          }
      }
      if(max1>=n-1)
      return true;
      return false;
    }////

//{ Driver Code Starts.
int main() {
    int t;
    cin >> t;
    while (t--) {
        int N;
        cin>>N;
        
        int A[N];
        
        for(int i=0; i<N; i++)
            cin>>A[i];

        Solution ob;
        cout << ob.canReach(A,N) << endl;
    }
    return 0;
}
